{
    "compileOnSave": true,
    "buildOnSave": true,
	"compilerOptions": {
        "sourceMap": false,          // allow sourcemap support
        "noImplicitAny": false,
        "strictNullChecks": false,   // enable strict null checks as a best practice
        "module": "commonjs",       // specifiy module code generation
        "target": "es5",            // specify ECMAScript target version  
        "noEmitOnError": true,
        "removeComments": true,
        "noResolve": false,
        "noLib": false,
        "preserveConstEnums": true,
        "outDir": "./build/",         // path to output directory
        "rootDir": "./",
        "charset": "utf-8",
        "moduleResolution": "node",
        "pretty": true,
        // types option has been previously configured
         "types": [
            // add node as an option
            "node"
         ],
         // typeRoots option has been previously configured
         "typeRoots": [
            // add path to @types
            "node_modules/@types"
         ]
    },
    "include": [
        "server/**/*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "files": [
        "server/server.ts",
        "server/config/env/config.ts"
    ]
}